<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameScreenActivity">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/verticalGl1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.35" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/verticalGl3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/verticalGl4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/verticalGl2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.65" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontalGl1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontalGl2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontalGl3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.6" />



    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontalGl4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8" />

    <!-- start of actual layout-->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/sudokuRV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/verticalGl4"
        app:layout_constraintStart_toStartOf="@+id/verticalGl3"
        app:layout_constraintTop_toTopOf="@+id/horizontalGl1" />


    <LinearLayout
        android:orientation="vertical"
        android:weightSum="100"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/verticalGl4"
        app:layout_constraintStart_toStartOf="@+id/verticalGl3"
        app:layout_constraintTop_toTopOf="@+id/horizontalGl4">

        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="100"
            android:layout_weight="50"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <Button
                android:backgroundTint="@color/black"
                android:id="@+id/selectedValue1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:elevation="8dp"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/white"
                app:autoSizeMaxTextSize="99sp"
                app:autoSizeMinTextSize="1sp"
                app:autoSizeTextType="uniform"
                app:layout_constraintTop_toTopOf="parent" />
            <Button
                android:backgroundTint="@color/black"
                android:id="@+id/selectedValue2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:elevation="8dp"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/white"
                app:autoSizeMaxTextSize="99sp"
                app:autoSizeMinTextSize="1sp"
                app:autoSizeTextType="uniform"
                app:layout_constraintTop_toTopOf="parent" />
            <Button
                android:backgroundTint="@color/black"
                android:id="@+id/selectedValue3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:elevation="8dp"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/white"
                app:autoSizeMaxTextSize="99sp"
                app:autoSizeMinTextSize="1sp"
                app:autoSizeTextType="uniform"
                app:layout_constraintTop_toTopOf="parent" />
            <Button
                android:backgroundTint="@color/black"
                android:id="@+id/selectedValue4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:elevation="8dp"
                android:gravity="center"
                android:text="4"
                android:textColor="@color/white"
                app:autoSizeMaxTextSize="99sp"
                app:autoSizeMinTextSize="1sp"
                app:autoSizeTextType="uniform"
                app:layout_constraintTop_toTopOf="parent" />
            <Button
                android:backgroundTint="@color/black"
                android:id="@+id/selectedValue5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:elevation="8dp"
                android:gravity="center"
                android:text="5"
                android:textColor="@color/white"
                app:autoSizeMaxTextSize="99sp"
                app:autoSizeMinTextSize="1sp"
                app:autoSizeTextType="uniform"
                app:layout_constraintTop_toTopOf="parent" />


        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:weightSum="100"
            android:layout_weight="50"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <Button
                android:backgroundTint="@color/black"
                android:id="@+id/selectedValue6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:elevation="8dp"
                android:gravity="center"
                android:text="6"
                android:textColor="@color/white"
                app:autoSizeMaxTextSize="99sp"
                app:autoSizeMinTextSize="1sp"
                app:autoSizeTextType="uniform"
                app:layout_constraintTop_toTopOf="parent" />
            <Button
                android:backgroundTint="@color/black"
                android:id="@+id/selectedValue7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:elevation="8dp"
                android:gravity="center"
                android:text="7"
                android:textColor="@color/white"
                app:autoSizeMaxTextSize="99sp"
                app:autoSizeMinTextSize="1sp"
                app:autoSizeTextType="uniform"
                app:layout_constraintTop_toTopOf="parent" />
            <Button
                android:backgroundTint="@color/black"
                android:id="@+id/selectedValue8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:elevation="8dp"
                android:gravity="center"
                android:text="8"
                android:textColor="@color/white"
                app:autoSizeMaxTextSize="99sp"
                app:autoSizeMinTextSize="1sp"
                app:autoSizeTextType="uniform"
                app:layout_constraintTop_toTopOf="parent" />
            <Button
                android:backgroundTint="@color/black"
                android:id="@+id/selectedValue9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:elevation="8dp"
                android:gravity="center"
                android:text="9"
                android:textColor="@color/white"
                app:autoSizeMaxTextSize="99sp"
                app:autoSizeMinTextSize="1sp"
                app:autoSizeTextType="uniform"
                app:layout_constraintTop_toTopOf="parent" />



        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>